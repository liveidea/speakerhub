%h1 Listing conferences
.col-sm-2.sidenav
  .panel.panel-default.text-left{style: "border-style: solid"}
    .panel-heading
      %h1 Filter
    .panel-body{style: "overflow: auto;"}
      =form_tag(conferences_path, method: :get) do
        =label_tag "Title"
        =text_field_tag :title,nil, class: "form-control"
        =label_tag "Start date"
        =date_field_tag :start_date
        =label_tag "Finish date"
        =date_field_tag :finish_date
        =submit_tag "search", class: "btn btn-default", style: "margin: top: 30px; width: 100%; font-weight: bold;"

.col-sm-10
  %table.table.table-hover
    %thead
      %tr
        %th Title
        %th Adress
        %th Date
        -# %th Speeches applied to conference
    %tbody
      #conferences
        =render @conferences
#paginator.paginate_pos
  =paginate @conferences, :theme => 'twitter-bootstrap-3', remote: true
-if user_signed_in?
  = link_to 'New Conference', new_conference_path, class: "btn btn-primary"
