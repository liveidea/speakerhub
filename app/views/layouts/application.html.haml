%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      =full_title(yield(:title))
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    
    = stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Oleo+Script', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Arizonia', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'application', 'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', media: 'all', 'data-turbolinks-track' => true

    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/css/select2.min.css", :rel => "stylesheet"}/
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2-rc.1/js/select2.min.js"}
    %script{:src => "http://maps.googleapis.com/maps/api/js"}

    %body.page
      -if flash[:alert]
        -flash[:alert].each do |error|
          =content_tag(:div, error, class: "alert alert-danger")
      = render 'layouts/header'
      -if flash[:success]
        =content_tag(:div, flash[:success], class: "alert alert-success")
      -if notice
        =content_tag(:div, notice, class: "alert alert-success")
      .container
        = yield
      = render 'layouts/footer'

