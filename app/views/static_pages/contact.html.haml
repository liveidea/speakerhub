/ Add Google Maps
:javascript
	var myCenter = new google.maps.LatLng(49.828287, 23.991210);
	var map, marker;

	function initialize() {
	var mapProp = {
	center:myCenter,
	zoom:15,
	scrollwheel:false,
	draggable:false,
	mapTypeId:google.maps.MapTypeId.ROADMAP
	};

	map = new google.maps.Map(document.getElementById("googleMap"),mapProp);

	marker = new google.maps.Marker({
	position:myCenter,
	});

	marker.setMap(map);
	}

	google.maps.event.addDomListener(window, 'load', initialize());
