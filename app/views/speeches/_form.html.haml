.panel-body
  .col-md-6.col-md-offset-3
    = form_for(@speech) do |f|
      - if @speech.errors.any?
        #error_explanation
          %h2
            = pluralize(@speech.errors.count, "error")
            prohibited this speech from being saved:
          %ul
            - @speech.errors.full_messages.each do |message|
              %li= message

      .form-group
        =f.label :theme
        =f.select :theme_id, Theme.all.pluck(:name, :id), autofocus: true, class: "form-control"
      .form-group
        =f.label :Conference
        =f.select :conference_id, Conference.all.pluck(:title, :id), autofocus: true, class: "form-control"
      .form-group
        =f.label :title
        =f.text_field :title, autofocus: true, class: "form-control"
      .form-group
        =f.label :description
        =f.text_area :description, autofocus: true, class: "form-control"
      .form-group
        =f.label :place
        =f.text_field :place, autofocus: true, class: "form-control"
      .form-group
        =f.label :date
        =f.date_select :date, autofocus: true, class: "form-control"
      .form-group
        =f.label :image
        =f.file_field :image, autofocus: true, class: "form-control"
      .form-group
        =f.label :video
        =f.text_field :video, autofocus: true, class: "form-control"
      = f.submit "Create Speech", class: "btn btn-primary"
