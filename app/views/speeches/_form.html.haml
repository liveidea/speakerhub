.panel-body
  .col-md-6.col-md-offset-3
    = form_for(@speech) do |f|
      - if @speech.errors.any?
        #error_explanation
          %h2
            = pluralize(@speech.errors.count, "error")
            prohibited this speech from being saved:
          %ul
            - @speech.errors.full_messages.each do |message|
              %li= message

      .form-group
        =f.label :theme
        =f.select :theme_id, options_for_select(Theme.all.pluck(:name, :id), params[:place]), {:prompt => "Select"}, {:class => "form-control"}
      .form-group
        =f.label :title
        =f.text_field :title, autofocus: true, class: "form-control"
      .form-group
        =f.label :description
        =f.text_area :description, autofocus: true, class: "form-control"
      .form-group
        =f.label :place
        =f.select :place, options_for_select(City.pluck(:name), params[:place]), {:prompt => "Select"}, {:class => "form-control"}
      .form-group
        =f.label :date
        %br
        =f.date_select :date, {prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }}, {style: "border-radius: 10px"}
      .form-group
        =f.label :image
        =f.file_field :image, autofocus: true, class: "form-control"
      .form-group
        =f.label :video
        =f.text_field :video, autofocus: true, class: "form-control", placeholder: "Enter link"
      = f.submit class: "btn btn-primary"
