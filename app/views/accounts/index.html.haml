%h1 Listing speakers
-# = link_to 'New Account', new_account_path
.col-sm-9.index_pos
  .row
    -@accounts.each do |account|
      .col-md-4.index_elements_padding
        .caption.text-center
          =image_tag account.image.show, class: "index_img"
          .hall-title
            =link_to("#{account.f_name} #{account.l_name}", account_path(account), target: "_blank")
.panel.panel-default.text-left{style: "border-style: solid"}
.col-sm-2.sidenav
  .panel.panel-default.text-left{style: "border-style: solid"}
    .panel-heading
      %h3 Filter
    .panel-body{style: "overflow: auto;"}
      =form_tag(accounts_path, method: :get) do
        =label_tag "Search user"
        =text_field_tag :f_name, nil, class: "form-control"
        =submit_tag "search", class: "btn btn-default"
      -Theme.all.each do |theme|
        %p=link_to theme.name, accounts_path(@account, theme: theme.id)
      %p=link_to 'Show all',accounts_path(@accounts)
.paginate_pos=paginate @accounts, :theme => 'twitter-bootstrap-3'
